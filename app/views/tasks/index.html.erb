<div class="m-5">
  <h1>To do list</h1>

  <ul class="p-5 mb-2 bg-light text-dark border rounded">
  <% @tasks.each do |task| %>
  <li class="text-decoration-none pb-3">
    <% if task.completed? %>
      <i class="fa-regular fa-square-check"></i>
    <% else %>
      <i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
  </li>
    <% end %>
  </ul>

  <%= link_to "Create a new task", new_task_path(@task) %>
</div>
